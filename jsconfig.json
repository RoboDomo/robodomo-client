{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "build",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom"],
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "paths": {
      "@/*": ["./*"],
      "Tablet/*": ["./Tablet/*"]
    }
  },
  "exclude": ["node_modules", "build", "webpack", "src/serviceWorkerCustom.js", "**/*.spec.js"]
}
